configuration {
  modi: "window,run,drun";
  location: 0;
  xoffset: 0;
  yoffset: 0;
  show-icons: false;
}

@theme "~/.config/rofi/theme.rasi"

window {
  width: 84em;
  border: 0;
  border-color: @bg-lighter;
  border-radius: 0.5em;
  childern: [ mainbox ];
}

element {
  padding: 15 0 15 0 ;
  text-color: @fg;
  background-color: @bg-light;
  orientation: vertical;
  border-radius: 8 8 8 8;
}

element selected {
  text-color: @bg;
  background-color: @fg-dark;
  border: 0;
  border-color: @bg-light;
}

element-text {
  background-color: inherit;
  margin: 5 0 5 -4;
  text-color: inherit;
  font: "JetBrainsMonoNL Nerd Font Mono 180";
  vertical-align: 0.5;
  horizontal-align: 0.5;
}

listview {
  padding: 15 15 15 15;
  background-color: @bg;
  columns: 5;
  lines: 1;
  fixed-lines: true;
}

mainbox {
  background-color: @bg;
  children: [ listview ];
}
